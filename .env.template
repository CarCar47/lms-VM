# Moodle VM Deployment - Environment Variables Template
# Copy to .env and customize: cp .env.template .env
# Load variables: source .env

# Google Cloud Configuration
export GCP_PROJECT_ID="your-project-id"
export GCP_REGION="us-central1"
export GCP_ZONE="us-central1-a"

# VM Configuration
export INSTANCE_NAME="moodle-vm"
export GCP_MACHINE_TYPE="e2-medium"
export GCP_BOOT_DISK_SIZE="30GB"
export GCP_DATA_DISK_SIZE="50GB"

# Domain & Email
export DOMAIN_NAME="learning.example.edu"
export ADMIN_EMAIL="admin@example.edu"
export ALERT_EMAIL="alerts@example.edu"

# Backup Configuration
export MOODLE_BACKUP_BUCKET="moodle-backups-yourschool"
export BACKUP_NOTIFICATION_EMAIL="backups@example.edu"

# SMTP Configuration (Optional)
export SMTP_HOST="smtp.gmail.com"
export SMTP_PORT="587"
export SMTP_USER="noreply@example.edu"
export SMTP_PASSWORD=""
export NOREPLY_EMAIL="noreply@example.edu"

# Monitoring
export MONITORING_ALERT_EMAIL="alerts@example.edu"

# Client Information
export ENVIRONMENT="production"
export CLIENT_NAME="Your School Name"
