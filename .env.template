# ============================================================================
# Moodle VM Deployment - Environment Variables Template
# ============================================================================
#
# USAGE:
#   1. Copy to .env: cp .env.template .env
#   2. Customize for your client/school
#   3. Load variables: source .env
#
# IMPORTANT: This file is used for local deployment orchestration.
# For production readiness (SSL, backups, automation), see PRODUCTION-SETUP.md
#
# ============================================================================

# ============================================================================
# Google Cloud Configuration
# ============================================================================
export GCP_PROJECT_ID="your-project-id"       # Your GCP project ID
export GCP_REGION="us-central1"                # Primary GCP region
export GCP_ZONE="us-central1-a"                # Primary GCP zone

# ============================================================================
# VM Configuration
# ============================================================================
export INSTANCE_NAME="moodle-vm"               # VM instance name
export GCP_MACHINE_TYPE="e2-medium"            # 2 vCPU, 4GB RAM (recommended minimum)
export GCP_BOOT_DISK_SIZE="30GB"               # OS + Moodle code
export GCP_DATA_DISK_SIZE="50GB"               # User data (/var/moodledata)

# ============================================================================
# Domain & Email (REQUIRED for Production Setup)
# ============================================================================
# IMPORTANT: Required for SSL/HTTPS setup (see PRODUCTION-SETUP.md Step 2)
export DOMAIN_NAME="learning.example.edu"      # Your institution's domain
export ADMIN_EMAIL="admin@example.edu"         # SSL certificate notifications
export ALERT_EMAIL="alerts@example.edu"        # System alerts

# ============================================================================
# Backup Configuration (REQUIRED for Production Setup)
# ============================================================================
# IMPORTANT: Required for GCS backups (see PRODUCTION-SETUP.md Step 3)
export MOODLE_BACKUP_BUCKET="moodle-backups-yourschool"  # GCS bucket name (must be globally unique)
export BACKUP_NOTIFICATION_EMAIL="backups@example.edu"   # Backup status notifications

# SMTP Configuration (Optional)
export SMTP_HOST="smtp.gmail.com"
export SMTP_PORT="587"
export SMTP_USER="noreply@example.edu"
export SMTP_PASSWORD=""
export NOREPLY_EMAIL="noreply@example.edu"

# Monitoring
export MONITORING_ALERT_EMAIL="alerts@example.edu"

# Client Information
export ENVIRONMENT="production"
export CLIENT_NAME="Your School Name"
